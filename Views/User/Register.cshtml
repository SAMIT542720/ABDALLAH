@using ABDALLAH.Data.ViewModels;
@model RegisterVM
@{
    ViewData["Titel"] = "انشاء حساب جديد";
}
<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>
                انشاء حساب جديد
            </h4>
        </p>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>عذرا!</b> - @TempData["Error"]</span>
            </div>
        }
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FullName">الاسم الكامل</label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmialAddress">عنوان البريد الإلكتروني</label>
                        <input asp-for="EmialAddress" class="form-control" />
                        <span asp-validation-for="EmialAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">كلمة المرور</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"> تأكيد كلمة المرور</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-outline-success float-right" type="submit" value="انشاء حساب" />
                        <a class="btn btn-outline-secondary" asp-controller="User" asp-action="Index">إلغاء</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>